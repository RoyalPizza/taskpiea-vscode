{
    "name": "taskpiea",
    "displayName": "Taskpiea",
    "description": "Task management for .taskp files with auto task ID generation and user autocomplete",
    "version": "1.0.0",
    "icon": "images/icon.jpg",
    "publisher": "royalpizza",
    "repository": {
        "type": "git",
        "url": "https://github.com/RoyalPizza/taskpiea.git"
    },
    "engines": {
        "vscode": "^1.80.0"
    },
    "type": "module",
    "categories": [
        "Other"
    ],
    "main": "./src/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "taskp",
                "extensions": [
                    ".taskp"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "taskp",
                "scopeName": "source.taskp",
                "path": "./syntaxes/taskp.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "taskpiea.jumpToIssue",
                "title": "Taskpiea: Jump to Issue"
            },
            {
                "command": "taskpiea.processDocument",
                "title": "Taskpiea: Process Document"
            },
            {
                "command": "taskpiea.createTaskpFile",
                "title": "Taskpiea: Create New Taskp File"
            }
        ],
        "configurationDefaults": {
            "[taskp]": {
                "editor.wordBasedSuggestions": "off",
                "editor.quickSuggestions": {
                    "other": false,
                    "comments": false,
                    "strings": false
                }
            }
        }
    }
}